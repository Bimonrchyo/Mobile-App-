<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/imgbackground"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logosekolah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMKN 1 JAKARTA"
        android:fontFamily="@font/domine_variablefont_wght"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5.5dp"
        />

    <View
        android:id="@+id/garis"
        android:layout_width="265dp"
        android:layout_height="2.5dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="@id/text"
        android:background="@color/white"
        />

    <ImageView
        android:id="@+id/kartun"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:src="@drawable/kartun"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:fontFamily="@font/domine_variablefont_wght"
        app:layout_constraintTop_toBottomOf="@id/kartun"
        app:layout_constraintStart_toStartOf="@id/kartun"
        app:layout_constraintEnd_toEndOf="@id/kartun"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_marginTop="60dp"
        />








</androidx.constraintlayout.widget.ConstraintLayout>