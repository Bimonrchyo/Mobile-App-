<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/imgbackground"
    >

    <ImageView
        android:layout_width="370dp"
        android:layout_height="370dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logosekolah"
        android:layout_marginTop="40dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/smk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        android:textSize="30sp"
        android:fontFamily="@font/domine_variablefont_wght"
        android:text="SMKN 1 JAKARTA"
        />

    <!--Garis-->
    <Button
        android:id="@+id/Garis"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/smk1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/blue"
        />

    <!--  Register  -->
    <Button
        android:id="@+id/register"
        android:layout_width="321dp"
        android:layout_height="61.91dp"
        app:layout_constraintStart_toStartOf="@id/Garis"
        app:layout_constraintEnd_toEndOf="@id/Garis"
        app:layout_constraintTop_toBottomOf="@id/Garis"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/register"
        app:layout_constraintBottom_toBottomOf="@id/register"
        app:layout_constraintStart_toStartOf="@id/register"
        app:layout_constraintEnd_toEndOf="@id/register"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/domine_variablefont_wght"
        android:text="Register"
        />

    <!--  Login  -->
    <Button
        android:id="@+id/login"
        android:layout_width="321dp"
        android:layout_height="61.91dp"
        app:layout_constraintStart_toStartOf="@id/register"
        app:layout_constraintEnd_toEndOf="@id/register"
        app:layout_constraintTop_toBottomOf="@id/register"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/login"
        app:layout_constraintBottom_toBottomOf="@id/login"
        app:layout_constraintStart_toStartOf="@id/login"
        app:layout_constraintEnd_toEndOf="@id/login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/domine_variablefont_wght"
        android:text="Login"
        />

</androidx.constraintlayout.widget.ConstraintLayout>