<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/imgbackground"
    >

<ImageView
        android:layout_width="370dp"
        android:layout_height="370dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logosekolah"
        android:layout_marginTop="40dp"
        >
</ImageView>

<TextView
    android:id="@+id/smk1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="200dp"
    android:textSize="30sp"
    android:fontFamily="@font/domine_variablefont_wght"
    android:text="SMKN 1 JAKARTA"
    />

<!--Garis-->
<View
    android:id="@+id/Garis"
    android:layout_width="match_parent"
    android:layout_height="2.5dp"
    app:layout_constraintTop_toBottomOf="@id/smk1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/blue"
    />

<TextView
    android:id="@+id/textSelamatDatang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="@id/Garis"
    app:layout_constraintStart_toStartOf="@id/Garis"
    app:layout_constraintEnd_toEndOf="@id/Garis"
    android:layout_marginTop="40dp"
    android:fontFamily="@font/domine_variablefont_wght"
    android:textSize="15sp"
    android:text="Selamat datang, di aplikasi resmi SMKN 1 Jakarta..."
    />

<Button
    android:id="@+id/buttonSwipe"
    android:layout_width="200dp"
    android:layout_height="76dp"
    app:layout_constraintStart_toStartOf="@id/textSelamatDatang"
    app:layout_constraintEnd_toEndOf="@id/textSelamatDatang"
    app:layout_constraintTop_toTopOf="@id/textSelamatDatang"
    android:layout_marginTop="80dp"
    android:backgroundTint="@color/blue"
/>

<!--text button-->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@id/buttonSwipe"
    app:layout_constraintEnd_toEndOf="@id/buttonSwipe"
    app:layout_constraintTop_toTopOf="@id/buttonSwipe"
    app:layout_constraintBottom_toBottomOf="@id/buttonSwipe"
    android:layout_marginRight="15dp"
    android:fontFamily="@font/domine_variablefont_wght"
    android:textSize="32.5sp"
    android:textColor="@color/white"
    android:text="SWIPE"
    />

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    app:layout_constraintStart_toStartOf="@id/buttonSwipe"
    app:layout_constraintEnd_toEndOf="@id/buttonSwipe"
    app:layout_constraintTop_toTopOf="@id/buttonSwipe"
    app:layout_constraintBottom_toBottomOf="@id/buttonSwipe"
    android:layout_marginLeft="140dp"
    android:src="@drawable/arrow"
    >
</ImageView>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/buttonSwipe"
    app:layout_constraintStart_toStartOf="@id/buttonSwipe"
    app:layout_constraintEnd_toEndOf="@id/buttonSwipe"
    android:paddingTop="29dp"
    android:fontFamily="@font/domine_variablefont_wght"
    android:text="Mau cari info tentang sekolah ini?, Klik tombol Swipe"
    />

  </androidx.constraintlayout.widget.ConstraintLayout>