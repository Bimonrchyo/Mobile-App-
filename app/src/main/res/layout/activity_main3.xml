<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/imgbackground"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logosekolah"
        android:layout_marginTop="40dp"
        />

<!--  Nama  -->
    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintStart_toStartOf="@id/edit"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Nama"
        />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/nama"
        android:textColor="@color/black"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textSize="16sp"
        android:padding="10dp"
        android:paddingStart="2.5dp"
        android:inputType="textPersonName"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Nama Anda"
        />

<!--  Email  -->
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit"
        app:layout_constraintStart_toStartOf="@id/edit2"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Email"
        />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:textColor="@color/black"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textSize="16sp"
        android:padding="10dp"
        android:paddingStart="2.5dp"
        android:inputType="text"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Nomor Handphone Anda"
        />

<!--  Nomor  -->
    <TextView
        android:id="@+id/nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit2"
        app:layout_constraintStart_toStartOf="@id/edit3"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Nomor"
        />

    <EditText
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@id/nomor"
        android:textColor="@color/black"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textSize="16sp"
        android:padding="10dp"
        android:paddingStart="2.5dp"
        android:inputType="number"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginTop="5dp"
        android:hint="Masukkan Email Anda"
        />

<!--  Password  -->
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edit3"
        app:layout_constraintStart_toStartOf="@id/edit3"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Password"
        />

    <!--  Hint PW  -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hintPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/password"
        >

    <!--    Input Text    -->
        <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
            android:paddingLeft="100dp"
        android:hint="Masukkan Password Anda"
        android:inputType="textPassword"
        android:fontFamily="@font/domine_variablefont_wght"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
            />
    </com.google.android.material.textfield.TextInputLayout>

<!--Button-->
    <Button
        android:id="@+id/btn"
        android:layout_width="210dp"
        android:layout_height="76dp"
        app:layout_constraintStart_toStartOf="@id/hintPw"
        app:layout_constraintEnd_toEndOf="@id/hintPw"
        app:layout_constraintTop_toTopOf="@id/hintPw"
        android:layout_marginTop="115dp"
        android:backgroundTint="@color/blue"
        android:text="Continue"
        android:textSize="32.5sp"
        android:paddingEnd="40dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/domine_variablefont_wght"
        />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@id/btn"
        app:layout_constraintEnd_toEndOf="@id/btn"
        app:layout_constraintTop_toTopOf="@id/btn"
        app:layout_constraintBottom_toBottomOf="@id/btn"
        android:layout_marginLeft="170dp"
        android:src="@drawable/arrow"
        />
<!--Back-->
    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/blue"
        android:text="Back"
        android:textSize="16sp"
        android:fontFamily="@font/domine_variablefont_wght"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>