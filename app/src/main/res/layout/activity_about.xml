<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A73E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/titleTentang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang Sekolah"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <!-- Foto Sekolah -->
        <ImageView
            android:id="@+id/fotoSekolah"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/smkn1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/deskripsiTentang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SMKN 1 Jakarta adalah sekolah kejuruan unggulan yang berfokus pada pengembangan keterampilan dan karakter siswa untuk menghadapi dunia kerja dan industri modern."
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/alamatSekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat: Jl. Budi Utomo No. 7, Jakarta Pusat"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/teleponSekolah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telepon: (021) 3456789"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingTop="5dp" />

    </LinearLayout>

</ScrollView>
